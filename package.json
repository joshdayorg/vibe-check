    "glob-gitignore": "^1.0.14"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.2",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.8.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
