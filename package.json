{
  "name": "vibecheck",
  "version": "0.1.0",
  "description": "A TypeScript CLI tool to scan codebases for security issues and best practice violations",
  "main": "dist/index.js",
  "bin": {
    "vibecheck": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
